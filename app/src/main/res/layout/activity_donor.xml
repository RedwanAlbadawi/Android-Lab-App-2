<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".DonorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="#fff"

            />


        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="320dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/donation_now"
                android:paddingTop="50dp"
                />

            <TextView

                android:id="@+id/make_donation_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Make Donations Now"
                android:textColor="#3F3F3F"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text=" “World Hunger is Preventable. \n You can help make a Difference” "
                android:textColor="#3F3F3F"
                android:textSize="15dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/make_donation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/add_rounded_button"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:text="+" />



        </LinearLayout>



    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/menu_item"
        app:headerLayout="@layout/header"
        android:background="#fff"
        android:layout_gravity="start"
        app:itemTextColor="@color/c3"/>


</androidx.drawerlayout.widget.DrawerLayout>